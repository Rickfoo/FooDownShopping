extend layout
block content
    div
      form( method="post", action="/shopping/item_master/save")
          div
            input( type="hidden", name="item_id", value=items[0].item_id)
            span Description:
            input( type="text", name="description", id="description", size=30,value=items[0].item_desc)
          div
            span Aisle :
            input( type="text",name="aisle", id="aisle",value=items[0].item_aisle)
          div
            span Price :
            input( type="text",name="price", id="price",value=items[0].item_price)
          input(type="submit", value="Save")